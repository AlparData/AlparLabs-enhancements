<?xml version="1.0"?>
<odoo>

    <record model="ir.ui.view" id="view_whatsapp_connector_message_ai_form">
        <field name="name">acrux.chat.message.form AI</field>
        <field name="model">acrux.chat.message</field>
        <field name="inherit_id" ref="whatsapp_connector.view_whatsapp_connector_message_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='event']" position="after">
                <field name="ai_event" />
                <field name="ai_aux_key" />
                <field name="bot_id" />
            </xpath>
        </field>
    </record>

</odoo>
