<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="whatsapp_connector_crm.CrmLeadPanel" owl="1">
        <div class="o_crm_lead_panel">
            <h5 class="mb-3">CRM Lead</h5>
            
            <t t-if="state.isLoading">
                <div class="text-center">
                    <i class="fa fa-spinner fa-spin" /> Loading...
                </div>
            </t>
            <t t-elif="state.lead">
                <div class="card mb-3">
                    <div class="card-body">
                        <h6 class="card-title" t-esc="state.lead.name" />
                        <span class="badge bg-info" t-esc="state.lead.stage_id[1]" />
                    </div>
                </div>
            </t>
            <t t-else="">
                <div class="text-center text-muted">
                    <p>No lead found for this contact.</p>
                    <button class="btn btn-primary btn-sm">Create Lead</button>
                </div>
            </t>
        </div>
    </t>
</templates>
