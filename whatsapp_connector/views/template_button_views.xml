<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!--list -->
    <record id="acrux_chat_button_list" model="ir.ui.view">
        <field name="name">acrux.chat.button.base.list</field>
        <field name="model">acrux.chat.button.base</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="btn_id" />
                <field name="ttype" />
                <field name="text" />
                <field name="url"
                    readonly="ttype != 'url'"
                    required="ttype == 'url'" />
                <field name="phone"
                    readonly="ttype != 'call'"
                    required="ttype == 'call'" />
            </list>
        </field>
    </record>

    <!-- list -->
    <record id="acrux_chat_template_button_list" model="ir.ui.view">
        <field name="name">acrux.chat.template.button.form</field>
        <field name="model">acrux.chat.template.button</field>
        <field name="inherit_id" ref="acrux_chat_button_list" />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <field name="btn_id" position="before">
                <field name="template_id" invisible="1" />
            </field>
        </field>
    </record>

    <!-- list -->
    <record id="acrux_chat_message_button_list" model="ir.ui.view">
        <field name="name">acrux.chat.message.button.form</field>
        <field name="model">acrux.chat.message.button</field>
        <field name="inherit_id" ref="acrux_chat_button_list" />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <field name="btn_id" position="before">
                <field name="message_id" invisible="1" />
            </field>
        </field>
    </record>

    <!-- list -->
    <record id="acrux_chat_message_list_item_button_list" model="ir.ui.view">
        <field name="name">acrux.chat.message.list.item.button.list</field>
        <field name="model">acrux.chat.message.list.item.button</field>
        <field name="inherit_id" ref="acrux_chat_button_list" />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <field name="btn_id" position="before">
                <field name="item_id" invisible="1" />
            </field>
            <field name="text" position="after">
                <field name="description" />
            </field>
            <field name="ttype" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="url" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="phone" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
        </field>
    </record>

</odoo>
