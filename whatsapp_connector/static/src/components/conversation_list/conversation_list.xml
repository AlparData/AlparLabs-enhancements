<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="whatsapp_connector.ConversationList" owl="1">
        <div class="d-flex justify-content-between align-items-center p-3 border-bottom">
            <h5 class="mb-0">Chats</h5>
            <button class="btn btn-primary btn-sm rounded-circle" t-on-click="openNewConversationModal" title="New Chat">
                <i class="fa fa-plus"/>
            </button>
        </div>
        <div class="o_conversation_list list-group list-group-flush overflow-auto">
            <t t-foreach="store.conversations" t-as="conversation" t-key="conversation.id">
                <a href="#" 
                   class="list-group-item list-group-item-action d-flex align-items-center py-3"
                   t-att-class="{ 'active': conversation.id === store.selectedConversationId }"
                   t-on-click.prevent="() => this.selectConversation(conversation.id)">
                    <div class="flex-shrink-0">
                        <img t-att-src="conversation.image_url" class="rounded-circle" style="width: 45px; height: 45px; object-fit: cover;" />
                    </div>
                    <div class="flex-grow-1 ms-3 overflow-hidden">
                        <div class="d-flex justify-content-between align-items-center mb-1">
                            <h6 class="mb-0 text-truncate" t-esc="conversation.name" />
                            <small class="text-muted" t-esc="conversation.last_activity" />
                        </div>
                        <p class="mb-0 text-truncate small text-muted">
                            <t t-esc="conversation.number_format" />
                        </p>
                    </div>
                </a>
            </t>
        </div>
    </t>
</templates>
