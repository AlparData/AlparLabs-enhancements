<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="whatsapp_connector.Chatroom" owl="1">
        <div class="o_chatroom_container d-flex h-100">
            <div class="o_chatroom_sidebar d-flex flex-column border-end" style="width: 350px; min-width: 300px;">
                <ConversationList />
            </div>
            <div class="o_chatroom_main d-flex flex-column flex-grow-1">
                <t t-if="store.selectedConversationId">
                    <Thread conversationId="store.selectedConversationId" />
                </t>
                <t t-else="">
                    <div class="d-flex align-items-center justify-content-center h-100 text-muted">
                        <span>Select a conversation to start chatting</span>
                    </div>
                </t>
            </div>
        </div>
    </t>
</templates>
