<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="chatroom.Conversation" owl="1">
        <div class="o_kanban_card o_Conversation d-flex align-items-center p-2 mb-1 cursor-pointer border-start border-4"
            t-att-data-id="props.conversation.id"
            t-attf-style="border-color: {{props.conversation.borderColor == '#FFFFFF' ? 'transparent': props.conversation.borderColor}} !important"
            t-attf-class="{{ isSelected ? 'bg-view shadow-sm border-primary': 'bg-view-lighter' }}" 
            t-on-click="onSelect">
            
            <div class="o_kanban_image_fill o_kanban_image_full position-relative me-3">
                <img class="rounded-circle o_image_64_cover" t-att-src="props.conversation.imageUrl" alt="perfil"/>
                <div t-attf-class="position-absolute bottom-0 end-0 shadow-sm rounded-circle {{props.conversation.getIconClass()}}" 
                     t-if="props.conversation.showIcon" />
            </div>

            <div class="o_kanban_details d-flex flex-column flex-grow-1 overflow-hidden">
                <div class="d-flex justify-content-between align-items-start w-100">
                    <strong class="o_kanban_record_title text-truncate text-900" t-attf-title="{{props.conversation.name}}">
                        <t t-esc="props.conversation.name" />
                    </strong>
                    <div class="ms-2 d-flex align-items-center">
                        <span class="badge rounded-pill text-bg-primary" t-if="props.conversation.countNewMsg">
                            <t t-esc="props.conversation.countNewMsg" />
                        </span>
                        <button class="btn btn-link text-muted p-0 ms-2 acrux_close_conv" t-if="!props.conversation.isCurrent() and !props.hideClose"
                            t-on-click="onClose">
                            <i class="oi oi-close small" />
                        </button>
                    </div>
                </div>

                <div class="o_kanban_record_subtitle text-muted text-truncate small mt-1">
                    <t t-if="props.conversation.lastMessage">
                        <t t-set="message" t-value="props.conversation.lastMessage" />
                        <t t-call="chatroom.MessageSummary" />
                    </t>
                </div>

                <div class="d-flex flex-wrap gap-1 mt-1" t-if="props.conversation.tagIds">
                    <t t-foreach="props.conversation.tagIds" t-as="tag" t-key="tag.id">
                        <span t-attf-class="badge rounded-pill o_tag_color_{{tag.color}}" t-esc="tag.name" />
                    </t>
                </div>
            </div>
        </div>
    </t>

</templates>
