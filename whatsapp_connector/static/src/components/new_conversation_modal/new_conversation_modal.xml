<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="whatsapp_connector.NewConversationModal" owl="1">
        <Dialog title="'New Conversation'">
            <div class="p-3">
                <div class="mb-3">
                    <label class="form-label">Select Contact</label>
                    <Many2XAutocomplete
                        resModel="'res.partner'"
                        getDomain="() => []"
                        value="state.partnerName"
                        update.bind="updatePartner"
                        placeholder="'Search contact...'"
                    />
                </div>
            </div>
            <t t-set-slot="footer">
                <button class="btn btn-primary" t-on-click="createConversation" t-att-disabled="!state.partnerId">
                    Start Chat
                </button>
                <button class="btn btn-secondary" t-on-click="props.close">
                    Cancel
                </button>
            </t>
        </Dialog>
    </t>
</templates>
